<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-rooms-table" author="George">
        <comment>Создание таблицы комнат</comment>

        <createTable tableName="rooms">
            <column name="number" type="INTEGER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_type" type="VARCHAR(12)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="capacity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="room_status" type="VARCHAR(11)" defaultValue="AVAILABLE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE"/>
            <column name="days_under_status" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE rooms ADD CONSTRAINT chk_room_type
            CHECK (room_type IN ('ECONOM', 'STANDARD', 'LUXURY', 'PRESIDENTIAL'));

            ALTER TABLE rooms ADD CONSTRAINT chk_room_status
            CHECK (room_status IN ('AVAILABLE', 'OCCUPIED', 'MAINTENANCE', 'CLEANING'));
        </sql>

        <createIndex tableName="rooms" indexName="idx_rooms_status">
            <column name="room_status"/>
        </createIndex>

        <rollback>
            <dropTable tableName="rooms"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
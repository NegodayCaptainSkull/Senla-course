<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002-create-guests-sequence" author="George">
        <comment>Создание последовательности для гостей</comment>

        <createSequence sequenceName="guests_seq"
                        startValue="1"
                        incrementBy="1"/>

        <rollback>
            <dropSequence sequenceName="guests_seq"/>
        </rollback>
    </changeSet>

    <changeSet id="002-create-guests-table" author="George">
        <comment>Создание таблицы гостей</comment>

        <createTable tableName="guests">
            <column name="id" type="VARCHAR(4)" defaultValueComputed="'G' || nextVal('guests_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="room_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="guests"
                baseColumnNames="room_number"
                referencedTableName="rooms"
                referencedColumnNames="number"
                constraintName="fk_guests_room"/>

        <createIndex tableName="guests" indexName="idx_guests_room">
            <column name="room_number"/>
        </createIndex>

        <rollback>
            <dropTable tableName="guests"/>
        </rollback>
    </changeSet>

</databaseChangeLog>